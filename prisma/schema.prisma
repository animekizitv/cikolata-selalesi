generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  username String @unique @id

  created_at DateTime @default(now())
  password String

  avatar_url String

  posts Post[]
  likes Like[]
  comments Comment[]
}

